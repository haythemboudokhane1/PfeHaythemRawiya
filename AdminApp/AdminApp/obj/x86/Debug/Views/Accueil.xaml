    <Grid Background="LightGray">
        
        <Grid Height="80" Background="Black" Margin="400,0,0,0"  VerticalAlignment="Top">
            <StackPanel x:ConnectionId='8' Orientation="Horizontal" HorizontalAlignment="Center" Name="btnshowGrid">
                <TextBlock Text="Gestion D'application" FontSize="35" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
        <Grid Width="400" HorizontalAlignment="Left">
            <Grid.Background>
                <ImageBrush ImageSource="ms-appx:///Images/sidebar.jpg" Stretch="UniformToFill"/>
            </Grid.Background>
            <Grid  Background="Black" Opacity="0.8">
                <StackPanel Height="80" VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Margin="10" Source="ms-appx:///Images/menu (3).png" Height="40" />
                    <TextBlock Text="Menu" FontSize="45" Foreground="White" Margin="10"/>
                </StackPanel>
            </Grid>

            <StackPanel Margin="0,100">
               
                <StackPanel Orientation="Horizontal">
                    <Image Source="ms-appx:///Images/home.png" Margin="10"/>
                    <TextBlock x:ConnectionId='7' Text="Accueil" Foreground="White" Name="txtAccueil" Margin="10" FontSize="35" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Source="ms-appx:///Images/goldfish (3).png" Margin="10"/>
                <TextBlock x:ConnectionId='6' Text="Gérer Poisson" Foreground="White" Name="txtGP" Margin="10" FontSize="35" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                <Image Source="ms-appx:///Images/2.png" Margin="10"/>
                <TextBlock x:ConnectionId='5' Text="Gérer pêcheur" Foreground="White" Name="txtGPecheur" Margin="10" FontSize="35" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Source="ms-appx:///Images/3.png" Margin="10"/>
                    <TextBlock x:ConnectionId='4' Text="Gérer Abonnee" Foreground="White"  Name="txtGU" Margin="10" FontSize="35" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Source="ms-appx:///Images/store.png" Margin="10" />
                    <TextBlock x:ConnectionId='3' Text="Gérer Commerçant" Foreground="White"  Name="txtGV" Margin="10" FontSize="35" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Source="ms-appx:///Images/post.png" Margin="10" />
                    <TextBlock x:ConnectionId='2' Text="Gérer Publication" Foreground="White"  Name="txtGPub" Margin="10" FontSize="35" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Source="ms-appx:///Images/logout.png" Margin="10" />
                    <TextBlock x:ConnectionId='1' Text="Se Déconecter" Foreground="White"  Name="txtlogout" Margin="10" FontSize="35" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Margin="400,100,0,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="25" Background="White">
                    
                </Grid>
                <Grid Grid.Column="1" Margin="25" Background="White">
                    
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Margin="25" Background="White">

            </Grid>
        </Grid>
    </Grid>
</Page>


    


